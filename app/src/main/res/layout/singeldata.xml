<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:padding="10dp"
        android:background="@drawable/rect">

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:padding="10dp">
            <ImageButton
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/flowmenu"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_baseline_more_vert_24"/>

            <ImageView
                android:id="@+id/viewavatar"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:paddingLeft="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/viewavatar"
                android:text="@string/app_name"
                android:layout_marginTop="20dp"
                android:id="@+id/txt_name"
                android:textSize="19sp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/txt_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_name"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/viewavatar"
                android:fontFamily="sans-serif-condensed"
                android:text="Harga Menu"
                android:layout_marginLeft="20dp"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/txt_jumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_harga"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/viewavatar"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Jumlah Menu"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/txt_satuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_harga"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/txt_jumlah"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Satuan Menu"
                android:textSize="13sp" />

            <Button
                android:id="@+id/detailBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_jumlah"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/viewavatar"
                android:text="Detail" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>